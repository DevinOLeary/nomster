<aside><%= link_to 'Back', root_path, class: 'back' %></aside>
<h2 class="color-inverse">Let us know about your place</h2>
<div class="place-box col-xs-10 col-xs-offset-1 main-color">
  <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <br />
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>
