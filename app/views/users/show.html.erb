
<h2 class="color-inverse">Hello <%= @user.email %>!</h2>
<div class="place-box col-xs-10 col-xs-offset-1">
  <div class="col-xs-4">
    <%= image_tag 'User.png' %>
  </div>
  <div class="col-xs-8">
    <h3>Thanks for being with us since <%= @user.created_at.strftime("%B %d, %Y") %></h3>
    <h3><%= @user.comments.count %> Total number of reviews</h3>
    <h3><%= @user.comments.where(rating: '5_stars').count %> Total number of 5 star ratings</h3>
  </div>
  <div class="clearfix"></div>
</div>
  <div class="clearfix"></div>
<div>
  <h2 class="color-inverse">My Comments</h2>
  <div class="place-box col-xs-10 col-xs-offset-1">
    <% @user.comments.each do |comment| %>
      <div class="col-xs-12 col-sm-6">
        <blockquote>
          <h4 class="center"><%= link_to comment.place.name, place_path(comment.place) %></h4>
          <br />
          <% if comment.humanized_rating.present? %>
            <b><%= comment.humanized_rating %>-</b>
          <% end %>
          <br/>
          <i><%= comment.message %></i>
        </blockquote>
      </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
