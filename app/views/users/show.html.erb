
<h2 class="color-inverse">Hello <%= @user.email %>!</h2>
<div class="place-box col-xs-10 col-xs-offset-1">
  <div class="col-xs-4">
    <%= image_tag 'User.png' %>
  </div>
  <!-- Modal for picture upload -->
  <div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Upload a picture of your place</h4>
        </div>
        <div class="modal-body">
          <%= simple_form_for @profile, url: user_user_picture_path(@user) do |p| %>
            <%= p.input :user_pic %>
            <br />
            <%= p.submit 'Post', class: "btn btn-success"%>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Upload</button>
        </div>
      </div>
    </div>
  </div>

      <br />
  <div class="col-xs-12 col-sm-6 pull-right">
    <!-- Button trigger modal -->
    <div class="upload flex-right">
      <% if current_user && current_user == @place.user %>
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#profileModal">
            Upload a Photo
        </button>
      <% end %>
    </div>
  <div class="col-xs-8">
    <h3>Thanks for being with us since <%= @user.created_at.strftime("%B %d, %Y") %></h3>
    <h3><%= @user.comments.count %> Total number of reviews</h3>
    <h3><%= @user.comments.where(rating: '5_stars').count %> Total number of 5 star ratings</h3>
  </div>
  <div class="clearfix"></div>
</div>
  <div class="clearfix"></div>
<!-- Comments -->
  <h2 class="color-inverse">My Comments</h2>
  <div class="place-box col-xs-10 col-xs-offset-1">
    <% @user.comments.each do |comment| %>
      <div class="col-xs-12 col-sm-6">
        <blockquote>
          <h4 class="center link"><%= link_to comment.place.name, place_path(comment.place) %></h4>
          <br />
          <% if comment.humanized_rating.present? %>
            <b><%= comment.humanized_rating %>-</b>
          <% end %>
          <br/>
          <i><%= comment.message %></i>
        </blockquote>
      </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
  <div class="clearfix"></div>
  <!-- Places -->
  <h2 class="color-inverse">My Places</h2>
  <div class="clearfix">
    <% @user.places.each do |place| %>
      <div class="place-box col-xs-10 col-xs-offset-1">
          <h2><%= link_to place.name, place_path(place) %></h2>
          <section class="front-photo pull-right col-sm-6 col-sm-offset-1">
            <% place.photos.each do |p| %>
              <figure>
                <%= image_tag p.picture %>
              </figure>
            <% end %>
          </section>
        <section class="col-sm-3 col-sm-offset-1 pull-left">
            <i><%= place.address %></i><br/><br/>
            <p><q><%= place.description %></q></p><br />
            <% if place.user.present? %>
              <small><%= place.user.email %></small>
            <% end %>
        </section>
        <br />
        <% if place.comments.present? %>
        <div class="col-xs-12">
          <blockquote>
            <% if place.comments.last.humanized_rating.present? %>
              <b><%= place.comments.last.humanized_rating %> - </b>
            <% end %>
            <br />
            <p> <%= place.comments.last.message %></p>
            <small> <%= place.comments.last.user.email %></small>
          </blockquote>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
